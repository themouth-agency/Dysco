{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "apps/mobile/Dockerfile"
  },
  "deploy": {
    "startCommand": "cd apps/mobile && npx expo start --tunnel --port $PORT --non-interactive",
    "numReplicas": 1,
    "restartPolicyType": "always"
  }
}